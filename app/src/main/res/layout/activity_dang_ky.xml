<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKy">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/txtNgaySinh"
        android:text="Ngày sinh"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/txtDienThoai"
        android:text="Điện thoại"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/txtEmail"
        android:text="Email"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/txtQueQuan"
        android:text="Quê quán"
        android:textAlignment="viewStart"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/txtHoTen"
        android:text="Họ tên"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtMatKhau"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:text="Mật khẩu"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/txtTaiKhoan"
        android:layout_alignStart="@+id/textView3"
        android:text="Tài khoản"
        android:textAlignment="viewStart"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/txtQueQuan"
        android:layout_width="243dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtNgaySinh"
        android:layout_marginBottom="222dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtNgaySinh"
        android:layout_width="243dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtDienThoai"
        android:layout_marginTop="235dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtDienThoai"
        android:layout_width="243dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_marginTop="194dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="243dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtHoTen"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtHoTen"
        android:layout_width="243dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtMatKhau"
        android:layout_marginTop="105dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtMatKhau"
        android:layout_width="243dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtTaiKhoan"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtTaiKhoan"
        android:layout_width="243dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <Button
        android:id="@+id/butDangKy"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtQueQuan"
        android:layout_alignTop="@+id/butTroVe"
        android:text="Đăng ký" />

    <Button
        android:id="@+id/butTroVe"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="136dp"
        android:text="Trở về" />
</RelativeLayout>
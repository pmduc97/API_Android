<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="35dp"
        android:text="Tài khoản"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtTaiKhoan"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMatKhau"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginTop="-6dp"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtMatKhau"
        android:layout_width="203dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/butDangNhap"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtMatKhau"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163dp"
        android:text="Đăng nhập" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/txtMatKhau"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:text="Mật khẩu"
        android:textSize="18sp" />

    <Button
        android:id="@+id/butDangKy"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/butDangNhap"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:text="Đăng ký" />

</RelativeLayout>